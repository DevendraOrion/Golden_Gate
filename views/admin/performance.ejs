<%- include header %>
<style>
.title{
    margin: 0;
    font-size: 24px;
}
.dataTables_filter {
    display: none;
}

</style>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.7/css/select2.min.css" rel="stylesheet" />
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="">
            <div class="row">
                <div class="col-md-4">
                    <h1 class='title'>
                        <%= title %>
                    </h1>
                </div>
                <div class="col-md-8">
                    <div class="pull-right">
                        <%if(admin.role=="Company"){%>
                        <select class="col select-rank" name="rank" style="width:152px;">
                            <option></option>
                            <option value="State">State</option>
                            <option value="District">District</option>
                            <option value="Zone">Zone</option>
                            <option value="Agent">Agent</option>
                            <option value="User">User</option>
                        </select>
                        <%} else if(admin.role==="State"){%>
                        <select class="col select-rank" name="rank" style="width:152px;">
                            <option></option>
                            <option value="District">District</option>
                            <option value="Zone">Zone</option>
                            <option value="Agent">Agent</option>
                            <option value="User">User</option>
                        </select>
                        <%}else if(admin.role==="District"){%>
                            <select class="col select-rank" name="rank" style="width:152px;">
                                <option></option>
                                <option value="Zone">Zone</option>
                                <option value="Agent">Agent</option>
                                <option value="User">User</option>
                            </select>
                            <%}else if(admin.role==="Zone"){%>
                                <select class="col select-rank" name="rank" style="width:152px;">
                                    <option></option>
                                    <option value="Agent">Agent</option>
                                    <option value="User">User</option>
                                </select>
                                <%}else if(admin.role==="Agent"){%>
                                    <select class="col select-rank" name="rank" style="width:152px;">
                                        <option></option>
                                        <option value="User">User</option>
                                    </select>
                                    <%}
                        
                        %> 

                        <select class="col search-user" name="state" style="width:152px;"></select>
                        <input type="text" class="col select-date" onfocus="(this.type='date')" onblur="(this.type='text')"  placeholder="From Date" id="startdatepicker" name="StartDate" style="width: 152px; height: 34px; border-radius: 4px; border: 1px solid gray; border: 1px solid gray;">
                        <input type="text" class="col select-date" onfocus="(this.type='date')" onblur="(this.type='text')" placeholder="To Date" id="enddatepicker" name="EndDate" style="width: 152px; height: 34px; border-radius: 4px; border: 1px solid gray;">

                        </div>
                </div>
            </div>
        </div>
    </section>
    <section class="content container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-body table-responsive">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>S No</th>
                                    <th>Player Id </th>
                                    <th>play Points </th>
                                    <th>Win Points</th>
                                    <th>End Points</th>
                                    <th>Margin</th>
                                    <% if (admin.role=='Company') { %>
                                    <th>Net Margin</th>
                                    <% } %>
                                </tr>
                            </thead>
                            <tbody>
                                <% var i=1; for (d of data) {%>
                                <tr class="gradeX">
                                    <td><%= i++%></td>
                                    <td><%= d.username %>(<%= d.search_id %>)</td>
                                    <td><%= d.refUsername %>(<%= d.refUserSearchId %>)</td>
                                    <% if (d.transaction_type == "C") { %>
                                    <td><span class="label label-success">Credit</span></td>
                                    <% } else { %>
                                    <td><span class="label label-danger">Debit</span></td>
                                    <% } %>
                                    <td>
                                        <%= d.msg %>
                                    </td>
                                    
                                    <td><%=d.created_at %></td>
                                    <% if (admin.role=='Company') { %>
                                    <td><%=d.current_balance - d.txn_amount %></td>
                                    <% } %>
                            <% }%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<div id="remark" class="modal fade remark" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Remark</h4>
            </div>
            <div class="modal-body" id="modal-body-remark">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
<%- include footer %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.7/js/select2.min.js"></script>
<script>
    var buttonWallete = "<%= buttonWallete %>"
    $(document).ready(function (e) {
        let rank;
        var THAT_ID = "";
        var THAT_TYPE = "";
        var THAT_STATUS = "";
        var THAT_RANK = "";
        var START_DATE = "";
    var END_DATE = "";
        $('.search-user').select2({
            
            allowClear: true,
            placeholder: 'User',
            ajax: {
                url: `/admin/find_userByRole`,
                data: function (params) {
                    console.log(params)
                    var query = {
                        search: params.term,
                        type: 'public',
                        role:rank
                    }
                    console.log(query)
                    return query;
                }
            }
        });

        $('.search-user').on('select2:select', function (e) {
            // Do something
            buttonWallete = false
            THAT_ID = e.params.data.id;
            table.ajax.reload();
           
        });

        $(".search-user").on("select2:clearing", function (e) {
            console.log('cleared');
            THAT_ID = "";
            table.ajax.reload();
        });


        $('.select-type').select2({
            allowClear: true,
            placeholder: 'Type of transaction'
        });

        $('.select-type').on('select2:select', function (e) {
            THAT_TYPE = e.params.data.id;
            table.ajax.reload();
        });

        $(".select-type").on("select2:clearing", function (e) {
            THAT_TYPE = "";
            table.ajax.reload();
        });

        $('.select-status').select2({
            allowClear: true,
            placeholder: 'Debit/Credit'
        });

        $('.select-status').on('select2:select', function (e) {
            THAT_STATUS = e.params.data.id;
            table.ajax.reload();
        });

        $(".select-status").on("select2:clearing", function (e) {
            THAT_STATUS = "";
            table.ajax.reload();
        });
        $('.select-rank').select2({
            allowClear: true,
            placeholder: 'User Type'
        });

        $('.select-rank').on('select2:select', function (e) {
            buttonWallete = false
            THAT_RANK = e.params.data.id;
            rank=THAT_RANK
            table.ajax.reload();
        });

        $(".select-rank").on("select2:clearing", function (e) {
            THAT_RANK = "";
            table.ajax.reload();
        });

        $('.select-date').on('change', function () {
        START_DATE = $('#startdatepicker').val();
        END_DATE = $('#enddatepicker').val();
        table.ajax.reload();
    });
  
      
        $('#example1').DataTable().destroy();
        var table = $('#example1').DataTable({
            destroy: true,
            dom: 'lBfrtip',
            lengthMenu: [
                [10, 25, 100, 500],
                [10, 25, 100, 500]
            ],
            pageLength: 10,
            buttons: [{
                    extend: 'excel',
                    text: '<span class="fa fa-file-excel-o"></span> Excel Export',
                    exportOptions: {
                        modifier: {
                            search: 'applied',
                            order: 'applied'
                        },
                        format: {
                            body: function (data, row, column, node) {
                                if (column === 1) {
                                    data = data.replace(/<.*?>/ig, "");
                                }
                                if (column === 2) {
                                    data = data.replace(/<.*?>/ig, "");
                                }
                                if (column ===7) {
                                    data = data.replace(/<.*?>/ig, "");
                                }
                                if (column === 3) {
                                    if(data.toLowerCase().includes('debit')) {
                                        data = "Debit";
                                    } else if(data.toLowerCase().includes('credit')) {
                                        data = "Credit";
                                    }
                                }
                                return data;

                            }
                        }
                    }
                },
                {
                    extend: 'pdf',
                    text: '<span class="fa fa-file-pdf-o"></span> PDF Export',
                    exportOptions: {
                        modifier: {
                            search: 'applied',
                            order: 'applied'
                        },
                        format: {
                            body: function (data, row, column, node) {
                                // Strip $ from salary column to make it numeric
                                if (column === 1) {
                                    data = data.replace(/<.*?>/ig, "");
                                }
                                if (column === 2) {
                                    data = data.replace(/<.*?>/ig, "");
                                }
                                return data;

                            }
                        }
                    }
                }
            ],
            "responsive": true,
            "processing": true,
            "serverSide": true,
            "ajax": {
        'url': '/ajax_performance',
        data: function (params) {    
    params.id = THAT_ID;
    params.rank = THAT_RANK;
    params.startDate = START_DATE;
    params.endDate = END_DATE;
    params.buttonWallete = buttonWallete;
            return params;
        }
    },
            "deferLoading": "<%= total %>",
            "createdRow": function (row, data, dataIndex) {
                var rowData = '<td>' + data[0] + '</td>' +
                    '<td>' + data[1] + '</td>' +
                    '<td>' + data[2] + '</td>' +
                    '<td>' + data[3] + '</td>' +
                    '<td>' + data[4] + '</td>' +
                    '<td>' + data[5] + '</td>' +
                    '<td>' + data[6] + '</td>' +
                $(row).html(rowData);
            },
            columnDefs: [{
                    orderable: true,
                    targets: [0,1, 2, 3, 4, 5]
                },
                {
                    orderable: false,
                    targets: '_all'
                }
            ]
        });
        $('#example1').DataTable().order([5, 'desc']).draw();

        $(document).on("click", ".export", function () {
            console.log("fire");
            var data = table.buttons.exportData();
        });
    });

    function openModal(d) {
        if (d == "") {
            $("#modal-body-remark").html('No Data Found');
        } else {
            $("#modal-body-remark").html(d);
        }

        $('#remark').modal('show');
    }
</script>
<%- include header %>
<style>
.title{
    margin: 0;
    font-size: 24px;
}
.dataTables_filter {
    display: none;
}

</style>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.7/css/select2.min.css" rel="stylesheet" />
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="">
            <div class="row">
                <div class="col-md-4">
                    <h1 class='title'>
                        <%= title %>
                    </h1>
                </div>
                <div class="col-md-8">
                    <div class="pull-right">
                        <select class="col search-user" name="state" style="width:152px;"></select>
            
                        <select class="col select-status" name="status" style="width:152px;">
                            <option></option>
                            <option value="1">Success</option>
                            <option value="0">Pending</option>
                        </select>
                       
                        <input type="date" class="col select-date" id="startdatepicker" name="StartDate" style="width: 152px; height: 34px; border-radius: 4px; border: 1px solid gray;">
                        <input type="date" class="col select-date" id="enddatepicker" name="EndDate" style="width: 152px; height: 34px; border-radius: 4px; border: 1px solid gray;">

                        </div>
                </div>
                <!-- <div class="row text-center pad-20"> -->
    
                <!-- </div> -->
            </div>
        </div>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <!-- /.box-header -->
                    <div class="box-body table-responsive">
                    <input type="hidden" value="<%= game%>" id="GameId">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>Slot No</th>
                                    <th>Slot Timing</th>
                                    <th>Total Bet Amount</th>
                                    <th>User Profit</th>
                                    <th>Parent Comm</th>
                                    <th>Comp Profit</th>
                                    <th>User Played</th>
                                    <th>Result</th>
                                    <th>Game Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% var i=1; for (d of data) {%>
                                <tr class="gradeX">
                                    <td><%= i++%></td>
                                    <td><%= d.room_id %></td>
                                    <td><%= d.created_at %></td>
                                    <td><%= d.totalBetAmt %></td>
                                    <td><%= d.totalWinAmt %></td>
                                    <td><%= d.adminComm %></td>
                                    <td><%= d.totalBetAmt -d.totalWinAmt %></td>
                                    <td><%= d.totalPlayer %></td>
                                    
                                    <% if (d.status == 1) { %>
                                        <td><span class="label label-success">Success</span></td>
                                        <% } else { %>
                                            <td><span class="label label-danger">Pending</span></td>
                                            <% } %>
                                    <td class="actions text-center">
                                    <a href="<%= host%>/user/showSlotDetail/<%= d._id%>"  class="on-editing save-row">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                    </td>
                                </tr>
                            <% }%>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<!-- Modal -->
<div id="remark" class="modal fade remark" role="dialog">
    <div class="modal-dialog modal-sm">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Remark</h4>
            </div>
            <div class="modal-body" id="modal-body-remark">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
<%- include footer %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.7/js/select2.min.js"></script>
<script>
    const GameId=document.getElementById("GameId").value
    $(document).ready(function (e) {
        var THAT_ID = "";
        var THAT_TYPE = "";
        var THAT_STATUS = "";
        var THAT_RANK = "";
        var START_DATE = "";
        var END_DATE = "";
        var table = $('#example').DataTable();
        $('.search-user').select2({
            allowClear: true,
            placeholder: 'Search user',
            ajax: {
                url: '/admin/find_user',
                data: function (params) {
                    var query = {
                        search: params.term,
                        type: 'public'
                    }
                    console.log(query);
                    return query;
                }
            }
        });

        $('.search-user').on('select2:select', function (e) {
            // Do something
            THAT_ID = e.params.data.id;
            table.ajax.reload();
            console.log("THAT_ID", THAT_ID);
        });

        $(".search-user").on("select2:clearing", function (e) {
            console.log('cleared');
            THAT_ID = "";
            table.ajax.reload();
        });

        $('.select-status').select2({
            allowClear: true,
            placeholder: 'Transaction status'
        });

        $('.select-status').on('select2:select', function (e) {
            THAT_STATUS = e.params.data.id;
            table.ajax.reload();
        });

        $(".select-status").on("select2:clearing", function (e) {
            THAT_STATUS = "";
            table.ajax.reload();
        });

        $('.select-date').on('change', function () {
        START_DATE = $('#startdatepicker').val();
        END_DATE = $('#enddatepicker').val();
        table.ajax.reload();
    });
  
      
        $('#example1').DataTable().destroy();
        var table = $('#example1').DataTable({
            destroy: true,
            dom: 'lBfrtip',
            lengthMenu: [
                [10, 25, 100, 500],
                [10, 25, 100, 500]
            ],
            pageLength: 10,
            buttons: [{
                    extend: 'excel',
                    text: '<span class="fa fa-file-excel-o"></span> Excel Export',
                    exportOptions: {
                        modifier: {
                            search: 'applied',
                            order: 'applied'
                        },
                        format: {
                            body: function (data, row, column, node) {
                                // Strip $ from salary column to make it numeric
                                if (column === 1) {
                                    data = data.replace(/<.*?>/ig, "");
                                }
                                if (column === 2) {
                                    data = data.replace(/<.*?>/ig, "");
                                }

                                if (column === 4) {
                                    data = formateDateandTime(parseInt(data));
                                }
                                return data;

                            }
                        }
                    }
                },
                {
                    extend: 'pdf',
                    text: '<span class="fa fa-file-pdf-o"></span> PDF Export',
                    exportOptions: {
                        modifier: {
                            search: 'applied',
                            order: 'applied'
                        },
                        format: {
                            body: function (data, row, column, node) {
                                // Strip $ from salary column to make it numeric
                                if (column === 1) {
                                    data = data.replace(/<.*?>/ig, "");
                                }
                                if (column === 2) {
                                    data = data.replace(/<.*?>/ig, "");
                                }

                                if (column === 4) {
                                    data = formateDateandTime(parseInt(data));
                                }
                                return data;

                            }
                        }
                    }
                }
            ],
            "responsive": true,
            "processing": true,
            "serverSide": true,
            "ajax": {
        'url': '/betHistory_ajax_transaction?gameID='+GameId,
        data: function (params) {
            params.id = THAT_ID;
            params.type = THAT_TYPE;
            params.status = THAT_STATUS;
            params.rank = THAT_RANK;
            params.startDate = START_DATE;
            params.endDate = END_DATE;
            return params;
        }
    },
            "deferLoading": "<%= total %>",
            "createdRow": function (row, data, dataIndex) {
                var rowData = '<td>' + data[0] + '</td>' +
                    '<td>' + data[1] + '</td>' +
                    '<td>' + data[2] + '</td>' +
                    '<td>' + data[3] + '</td>' +
                    '<td>' + data[4] + '</td>' +
                    '<td>' + data[5] + '</td>' +
                    '<td>' + data[6] + '</td>' +

                $(row).html(rowData);
            },
            columnDefs: [{
                    orderable: true,
                    targets: [0, 2, 3, 4, 5, 6]
                },
                {
                    orderable: false,
                    targets: [1]
                }
            ]
        });
        $('#example1').DataTable().order([4, 'desc']).draw();

        $(document).on("click", ".export", function () {
            console.log("fire");
            var data = table.buttons.exportData();
        });
    });

    function openModal(d) {
        if (d == "") {
            $("#modal-body-remark").html('No Data Found');
        } else {
            $("#modal-body-remark").html(d);
        }

        $('#remark').modal('show');
    }
</script>
// Map to store total chip amount and total users for each room ID
const roomDataMap = new Map();

socket.on('OnChipMoveRoullate', function (data) {
    // Get current date and time
    var currentDateTime = getCurrentDateTime();
    let User = new Set();
    var betsHTML = '';
    let totalChips = 0;
    let totalUser = 1;

    // Check if the room ID already exists in the map
    if (roomDataMap.has(data.room_id)) {
        // If the room ID exists, update the total chip amount and total users
        const roomData = roomDataMap.get(data.room_id);
        totalChips = roomData.totalChips;
        totalUser = roomData.totalUser; 
    }

    // Iterate over the bets object and append each bet's details
    Object.values(data.bets).forEach(bet => {
        bet.forEach(b => {
            User.add(b.playerId);

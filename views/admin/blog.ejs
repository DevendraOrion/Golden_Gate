            function acceptRequest(id, status, reason) {
                $.ajax({
                    method: 'post',
                    url: '/admin/kyc/request',
                    data: {
                        request_id: id,
                        status: status,
                        reason: reason
                    },
                    success: function (response) {
                        if (response.status == 1) {
                            swal({
                                icon: 'success',
                                title: response.Msg
                            }).then(function () {
                                window.location.reload();
                            });
                        } else {
                            swal({
                                icon: 'error',
                                title: response.Msg
                            });
                        }
                    },
                    error: function (response) {
                        swal({
                            icon: 'error',
                            title: response.Msg
                        });
                    }
                });
            }
